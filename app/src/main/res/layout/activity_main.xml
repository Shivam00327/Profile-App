<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/wave"
    android:paddingStart="24dp"
    android:orientation="vertical">




    <TextView
        android:layout_marginTop="34dp"
        android:id="@+id/text_view_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Dashboard"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:fontFamily="sans-serif-condensed-medium">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="60dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_profile"
                android:layout_width="120dp"
                android:layout_height="140dp"
                app:cardCornerRadius="35dp">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/account"/>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Profile"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_Skill"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginTop="35dp"
                app:cardCornerRadius="35dp">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/solution"/>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Skill"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_hobby"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginTop="35dp"
                app:cardCornerRadius="35dp">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lifestyle"/>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Hobby"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="65dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_work"
                android:layout_width="120dp"
                android:layout_height="140dp"
                app:cardCornerRadius="35dp"
                android:layout_marginLeft="59dp">
                <ImageView

                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/suitcase"/>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="109dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Work"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_education"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginLeft="59dp"
                android:layout_marginTop="35dp"
                app:cardCornerRadius="35dp">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/graduation"/>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="94dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Education"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_achievement"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="59dp"
                app:cardCornerRadius="35dp">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/online_resume"/>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Portfolio"/>

        </LinearLayout>
    </LinearLayout>






</LinearLayout>