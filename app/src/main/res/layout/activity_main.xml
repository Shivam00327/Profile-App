<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="24dp">


        <TextView
            android:id="@+id/text_view_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="My Dashboard"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_profile"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="45dp"
            app:cardCornerRadius="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_dashboard">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/account" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Profile"
            app:layout_constraintEnd_toEndOf="@id/card_view_profile"
            app:layout_constraintStart_toStartOf="@id/card_view_profile"
            app:layout_constraintTop_toBottomOf="@id/card_view_profile" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_skill"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="55dp"
            app:cardCornerRadius="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view_profile">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/solution" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Skill"
            app:layout_constraintEnd_toEndOf="@id/card_view_skill"
            app:layout_constraintStart_toStartOf="@id/card_view_skill"
            app:layout_constraintTop_toBottomOf="@id/card_view_skill" />



        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/card_view_skill"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/card_view_hobby"
            android:layout_width="140dp"
            android:layout_marginTop="55dp"
            android:layout_height="140dp"
            app:cardCornerRadius="35dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/lifestyle" />

        </androidx.cardview.widget.CardView>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/card_view_hobby"
            app:layout_constraintEnd_toEndOf="@id/card_view_hobby"
            app:layout_constraintStart_toStartOf="@id/card_view_hobby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Hobby" />


        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/text_view_dashboard"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/card_view_education"
            android:layout_width="140dp"
            android:layout_marginTop="45dp"
            android:layout_height="140dp"
            app:cardCornerRadius="35dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/graduation" />

        </androidx.cardview.widget.CardView>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/card_view_education"
            app:layout_constraintStart_toStartOf="@id/card_view_education"
            app:layout_constraintEnd_toEndOf="@id/card_view_education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Education" />



        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/card_view_education"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/card_view_work"
            android:layout_width="140dp"
            android:layout_marginTop="55dp"
            android:layout_height="140dp"
            app:cardCornerRadius="35dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/suitcase" />

        </androidx.cardview.widget.CardView>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/card_view_work"
            app:layout_constraintStart_toStartOf="@id/card_view_work"
            app:layout_constraintEnd_toEndOf="@id/card_view_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Work" />


        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/card_view_work"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/card_view_achievement"
            android:layout_width="140dp"
            android:layout_marginTop="55dp"
            android:layout_height="140dp"
            app:cardCornerRadius="35dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/medal_" />

        </androidx.cardview.widget.CardView>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/card_view_achievement"
            app:layout_constraintStart_toStartOf="@id/card_view_achievement"
            app:layout_constraintEnd_toEndOf="@id/card_view_achievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Achievement" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
